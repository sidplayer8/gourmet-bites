{
    "version": 2,
    "name": "gourmet-bites-admin",
    "redirects": [
        {
            "source": "/",
            "destination": "/login.html",
            "permanent": false
        },
        {
            "source": "/index.html",
            "destination": "/login.html",
            "permanent": false
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                },
                {
                    "key": "Pragma",
                    "value": "no-cache"
                },
                {
                    "key": "Expires",
                    "value": "0"
                }
            ]
        }
    ]
}